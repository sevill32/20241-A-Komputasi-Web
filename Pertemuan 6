//confirmaion1

<?php
// Koneksi ke database MySQL
$servername = "localhost";  
$username = "root";         
$password = "";             
$dbname = "kontak";         

// Membuat koneksi
$conn = new mysqli($servername, $username, $password, $dbname);

// Cek koneksi
if ($conn->connect_error) {
    die("Koneksi gagal: " . $conn->connect_error);
}

// Menangkap data dari form
if (isset($_POST['id']) && !empty($_POST['id'])) {
    // Jika ID ada, maka lakukan update
    $id = $_POST['id'];
    $sql = "UPDATE hubungi_kami SET 
            name='$_POST[name]', 
            email='$_POST[email]', 
            gender='$_POST[gender]', 
            ttl='$_POST[ttl]', 
            message='$_POST[message]' 
            WHERE id='$id'";
} else {
    // Jika ID tidak ada, lakukan insert data baru
    $sql = "INSERT INTO hubungi_kami (name, email, gender, ttl, message)
            VALUES ('$_POST[name]', '$_POST[email]', '$_POST[gender]', '$_POST[ttl]', '$_POST[message]')";
}

// Eksekusi query (update atau insert)
if ($conn->query($sql) === TRUE) {
    if (!isset($id)) {
        $id = $conn->insert_id; // Hanya mendapatkan ID jika data baru di-insert
    }
    echo "Data berhasil disimpan!";
} else {
    echo "Error: " . $sql . "<br>" . $conn->error;
}

$conn->close();
?>

<!doctype html>
<html lang="id">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <title>Konfirmasi Kontak</title>
</head>
<body>
<div class="container mt-5">
    <h2>Terima Kasih!</h2>
    <p>Berikut adalah informasi yang Anda kirim:</p>
    <ul>
        <li><strong>Nama:</strong> <?php echo htmlspecialchars($_POST['name']); ?></li>
        <li><strong>Email:</strong> <?php echo htmlspecialchars($_POST['email']); ?></li>
        <li><strong>Gender:</strong> <?php echo htmlspecialchars($_POST['gender']); ?></li>
        <li><strong>Tanggal Lahir:</strong> <?php echo htmlspecialchars($_POST['ttl']); ?></li>
        <li><strong>Pesan:</strong> <?php echo htmlspecialchars($_POST['message']); ?></li>
    </ul>
    <a href="contact1.php" class="btn btn-primary">Back to Contact</a>
    <a href="edit.php?id=<?php echo $id; ?>" class="btn btn-primary">Edit Data</a> <!-- Tombol edit -->
    <a href="delete.php?id=<?php echo $id; ?>" class="btn btn-primary" onclick="return confirm('Apakah Anda yakin ingin menghapus data ini?');">Delete Data</a>
</div>
</body>
</html>

//delete

<?php
// Koneksi ke database MySQL
$servername = "localhost";  
$username = "root";         
$password = "";             
$dbname = "kontak";         

// Membuat koneksi
$conn = new mysqli($servername, $username, $password, $dbname);

// Cek koneksi
if ($conn->connect_error) {
    die("Koneksi gagal: " . $conn->connect_error);
}

// Menangkap ID dari URL
if (isset($_GET['id'])) {
    $id = $_GET['id'];

    // Query untuk menghapus data berdasarkan ID
    $sql = "DELETE FROM hubungi_kami WHERE id='$id'";

    if ($conn->query($sql) === TRUE) {
        echo "Data berhasil dihapus!";
        // Redirect jika ingin kembali ke daftar
        // header('Location: daftar.php'); 
        // exit();
    } else {
        echo "Error: " . $sql . "<br>" . $conn->error; // Tampilkan pesan kesalahan
    }
} else {
    echo "ID tidak ditemukan!";
}

// Menutup koneksi
$conn->close();
?>

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <title>Delete Kontak</title>
</head>
<body>
<div class="container mt-5">
    <a href="contact1.php" class="btn btn-primary">Back to Contact</a> <!-- Tombol kembali ke kontak -->
</div>
</body>
</html>

//edit

<?php
// Koneksi ke database
$servername = "localhost";
$username = "root";
$password = "";
$dbname = "kontak";

$conn = new mysqli($servername, $username, $password, $dbname);

// Cek koneksi
if ($conn->connect_error) {
    die("Koneksi gagal: " . $conn->connect_error);
}

// Menangkap ID dari URL
$id = $_GET['id'];

// Mengambil data berdasarkan ID
$sql = "SELECT * FROM hubungi_kami WHERE id='$id'";
$result = $conn->query($sql);

if ($result->num_rows > 0) {
    $row = $result->fetch_assoc();
} else {
    echo "Data tidak ditemukan";
    exit();
}

$conn->close();
?>

<!doctype html>
<html lang="id">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <title>Edit Data Kontak</title>
</head>
<body>
<div class="container mt-5">
    <h2>Edit Kontak</h2>
    <form method="post" action="confirmation1.php">
        <input type="hidden" name="id" value="<?php echo $row['id']; ?>"> <!-- Hidden field untuk ID -->

        <div class="form-group">
            <label for="name">Nama:</label>
            <input type="text" class="form-control" name="name" value="<?php echo $row['name']; ?>" required>
        </div>

        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" name="email" value="<?php echo $row['email']; ?>" required>
        </div>

        <div class="form-group">
            <label for="gender">Gender:</label>
            <select class="form-control" name="gender">
                <option value="Pria" <?php if($row['gender'] == 'Pria') echo 'selected'; ?>>Pria</option>
                <option value="Wanita" <?php if($row['gender'] == 'Wanita') echo 'selected'; ?>>Wanita</option>
            </select>
        </div>

        <div class="form-group">
            <label for="ttl">Tanggal Lahir:</label>
            <input type="date" class="form-control" name="ttl" value="<?php echo $row['ttl']; ?>" required>
        </div>

        <div class="form-group">
            <label for="message">Pesan:</label>
            <textarea class="form-control" name="message" required><?php echo $row['message']; ?></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Update Data</button>
    </form>
</div>
</body>
</html>
